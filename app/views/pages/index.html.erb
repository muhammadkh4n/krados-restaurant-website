<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% if notice %>
      <p id="notice" class="alert alert-warning"><%= notice %></p>
      <% end %>

      <h1>Listing Pages</h1>

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Images</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= page.text %></td>
              <td>
              <% page.images.each do |image| %>
                <%= image_tag(image.url, class: "img-thumbnail", width: "50") %>
              <% end %>
              </td>
              <td><%= link_to 'Show', page %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Page', new_page_path, class: "btn btn-primary" %>
      <br><br>
      <%= link_to 'Back to Panel', admin_panel_path %>
    </div>
  </div>
</div>
