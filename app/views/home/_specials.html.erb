<div class="section row" id="specials">
  <h1 class="col-xs-12" data-aos="zoom-in-down">Specials</h1>
  <% if @pages["specials_note"] %>
    <% @pages["specials_note"].text.split(/\s{4}/).each do |note| %>
      <p class="col-xs-12 desc" data-aos="zoom-in-down"><%= note %></p>
    <% end %>
  <% end %>
  <div class="slider col-xs-12">
    <ul id="specials-slider">
      <% @specials.each_with_index do |special, i| %>
        <li class="slide" data-aos="fade-right" data-aos-delay="<%= ((i+2) * 100) %>">
          <h3><%= special.name %></h3>
          <div class="dish">
            <%= image_tag special.image, class: "img-responsive" %>
          </div>
          <p>
            <%= special.description %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
