<div class="section row" id="specials">
  <h1 class="col-xs-12">Specials</h1>
  <p class="col-xs-12 desc">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima libero nam, dignissimos reprehenderit vel atque ea. Necessitatibus neque a aliquam eos soluta quam, quisquam molestiae fuga dolor quo, ad eveniet.
  </p>
  <div class="slider col-xs-12">
    <ul id="specials-slider">
      <% @specials.each do |special| %>
        <li class="slide">
          <h3><%= special.name %></h3>
          <div class="dish">
            <%= image_tag special.image, class: "img-responsive" %>
          </div>
          <p>
            <%= special.description %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
