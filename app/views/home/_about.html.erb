<div id="about" class="section row">
  <h1 class="col-xs-12" data-aos="zoom-in-down">About Us</h1>
  <% if @pages["about"] %>
    <div class="col-xs-12">
      <div class="text-box" data-aos="zoom-in">
        <% @pages["about"].text.split(/\s{4}/).each do |about| %>
          <p><%= about %></p>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="images row">
        <% @pages["about"].images.each_with_index do |image, i| %>
          <div class="image col-xs-12 col-sm-4" data-aos="fade-up"
            data-aos-delay="<%= ((i+2) * 100) %>"><%= image_tag image, class: "img-responsive" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
