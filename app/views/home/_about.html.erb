<div id="about" class="section row">
  <h1 class="col-xs-12" data-aos="zoom-in">About Us</h1>
  <div class="col-xs-12">
    <div class="text-box" data-aos="flip-up" data-aos-duration="1000">
      <p>
        <%= @about.text %>
      </p>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="images row">
      <% @about.images.each do |image| %>
        <div class="image col-xs-12 col-sm-4" data-aos="flip-right"><%= image_tag image, class: "img-responsive" %></div>
      <% end %>
    </div>
  </div>
</div>
