<div id="contact" class="row section">
  <h1 class="col-xs-12" data-aos="zoom-in" data-aos-duration="500">Contact Us</h1>
  <div class="col-xs-12">
    <div class="text-box">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <form action="">
            <div class="form-group" data-aos="fade-right" data-aos-duration="500">
              <input type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group" data-aos="fade-right" data-aos-duration="600">
              <input type="text" class="form-control" placeholder="Email">
            </div>
            <div class="form-group" data-aos="fade-right" data-aos-duration="700">
              <input type="text" class="form-control" placeholder="Phone">
            </div>
            <div class="form-group" data-aos="fade-right" data-aos-duration="800">
              <textarea name="name" rows="8" class="form-control" placeholder="Message"></textarea>
            </div>
          </form>
        </div>
        <div class="col-xs-12 col-md-6" id="address" data-aos="fade-left" data-aos-duration="500">
          <p id="phone">PH: <%= @phone.text %></p>
          <h3>Address:</h3>
          <address class="">
            <%= @address.text %>
          </address>
          <p><%= @contact_text.text %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="map col-xs-12" data-aos="fade-up" data-ao-duration="500">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3402.7625775744564!2d74.30412121557548!3d31.475716681384416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391903fbf736e85b%3A0x9fbf581e9ace697!2sKrados+Grill!5e0!3m2!1sen!2s!4v1477557968411" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
  </div>
</div>
