<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% if notice %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="notice" class="alert alert-danger"><%= alert %></p>
      <% end %>

      <h1>Listing Admins</h1>

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Username</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @admins.each do |admin| %>
            <% if admin.username != "master_admin" %>
              <tr>
                <td><%= admin.username %></td>
                <% if admin == current_admin %>
                <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
                <% else %>
                <td></td>
                <% end %>
                <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Admin', new_admin_path, class: "btn btn-primary" %>
      <br><br>
      <%= link_to 'Back to Panel', admin_panel_path %>
    </div>
  </div>
</div>
