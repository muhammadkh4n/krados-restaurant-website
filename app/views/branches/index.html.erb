<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% if notice %>
        <p id="notice" class="alert alert-warning"><%= notice %></p>
      <% end %>

      <h1>Listing Branches</h1>

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @branches.each do |branch| %>
            <tr>
              <td><%= branch.name %></td>
              <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
              <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Branch', new_branch_path, class: "btn btn-primary" %>
      <%= link_to 'Back to Dishes', dishes_path %>

    </div>
  </div>
</div>
